<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetailFollowing"
    android:background="@android:color/holo_blue_light">

    <ImageView
        android:id="@+id/d_avatar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/d_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d_avatar"
        android:text="Username"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d_username"
        android:text="Bio"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_following"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/d_bio"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_followers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/d_bio"
        android:layout_toRightOf="@id/d_following"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_repo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Repositories"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/d_bio"
        android:layout_toLeftOf="@id/d_following"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_followingcount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="000"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/d_following"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_followerscount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="000"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/d_followers"
        android:layout_toRightOf="@id/d_following"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_repocount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="000"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/d_repo"
        android:layout_toLeftOf="@id/d_following"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/d_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Web?"
        android:textAlignment="center"
        android:layout_below="@id/d_followingcount"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

</RelativeLayout>